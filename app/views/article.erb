<link href="/css/article.css" media="screen" rel="stylesheet" type="text/css" media="screen, projection" />

<div class="article">
  <div class="title">
    <p><%= @article.title %></p>
  </div>
  <div class="description">
    <p><%= @article.description %></p>
  </div>
  <div class="url">
    <a href="<%= @article.url %>"  target="_blank"><%= @article.url %></a>
  </div>
  <div class="share">
    <div class="share-button">
      <a href="https://www.facebook.com/sharer/sharer.php?u=<%= @article.url %>" class="fa fa-facebook" target="_blank">
      </a>
    </div>
    <div class="share-button">
      <a href="https://twitter.com/share?url=<%= @article.url %>" class="fa fa-twitter" target="_blank">
      </a>
    </div>
  </div>
</div>
